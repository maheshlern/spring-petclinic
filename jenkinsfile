pipeline {
    agent { label 'MAVEN'}
    options {
        timeout(time: 1, unit: 'MINUTES')
    }
    triggers {
        //pollSCM('* * * * *')
        cron('30 16 * * *')
    }       
    stages {
        stage('git'){
            steps {
                git url:'https://github.com/maheshlern/spring-petclinic.git',
                    branch: 'release'
            }
        }
        stage('build'){
            steps {
                sh 'mvn clean package' 
                withSonarQubeEnv(installationName: 'SONAR_CLOUD', credentialsId: 'SONAR_CLOUD') {
                    sh 'mvn clean verify sonar:sonar -Dsonar.token=<your personal access token> -Dsonar.host.url=https://sonarcloud.io -Dsonar.organization=<your organization key> -Dsonar.projectKey=<your project key>'
                }
            }
            post {
                success {
                    archieveArtifacts artifacts: '**/spring-petclinic-*.jar'    
                    junit testResults: '**/TEST-*.xml'
                    mail subject: 'build stage succeded',
                        from:  'build@learningthoughts.io',
                        to: 'all@learningthoughts.io',
                        body: "Refer to $BUILD_URL for more details"

                }
                failure {
                    mail subject: 'build stage failed',
                        from:  'build@learningthoughts.io',
                        to: 'all@learningthoughts.io',
                        body: "Refer to $BUILD_URL for more details"
                }
            }           
            
        }
        stage("Quality Gate") {
            steps {
                timeout(time: 1, unit: 'HOURS') {
                    waitForQualityGate abortPipeline: true
                }
            }
        }

        stage('docker image') {
            agent {label 'DOCKER'}
            steps {
                sh 'docker image build -t shaikkhajaibrahim/spc:dev-$BUILD_ID .'
            }
        }
    }

}